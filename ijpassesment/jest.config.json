{
    "rootDir": "./",
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverageFrom": [
        "<rootDir>/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/",
        "<rootDir>/coverage/",
        "<rootDir>/setup/"
    ],
    "coverageThreshold": {
        "global": {
            "statements": 100,
            "branches": 100,
            "functions": 100,
            "lines": 100
        }
    },
    "coverageDirectory": "coverage/unit",
    "collectCoverage": true,
    "coverageReporters": [
        "json",
        "html"
    ]
}